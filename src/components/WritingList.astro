---
import { getCollection } from "astro:content";

const { posts, showTags } = Astro.props;
---

<section>
  <ul class="list">
    {
      posts.map((entry) => (
        <>
          <a href={`/writing/${entry.slug}`}>{entry.data.title}</a>
          <br />
          {entry.data.tags.map((tag) => (
            <>
              <a
                class="text-sm font-light text-green-600 no-underline"
                href={`/writing/tags/${tag}`}
              >
                {tag}
              </a>
              <br />
            </>
          ))}
          <time datetime={entry.data.date.toISOString()}>
            {entry.data.date.toDateString().split(" ").slice(1).join(" ")}
          </time>
        </>
      ))
    }
  </ul>
</section>

<style>
  .list {
    padding-left: 0px;
  }
</style>
