---
import {getCollection} from "astro:content";

import WritingList from "../components/WritingList.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const posts = await getCollection("writing", ({ data }) => {
  return import.meta.env.PROD ? data.draft !== true : true;
});
---

<BaseLayout title="Alex Stephen - Writing" description="Alex Stephen - Writing">
    <h1>Writing</h1>
    <p>I'm an aspiring writer. I love talking about pop culture, technology, and business through the lens of data and storytelling.</p>
    <hr />
    <WritingList posts={posts}/>
</BaseLayout>